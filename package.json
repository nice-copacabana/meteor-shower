{
  "name": "meteor-shower",
  "version": "0.1.0",
  "description": "AI 编程工具一键优化与同步平台",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=packages/cli",
    "test": "echo 'Tests will be implemented in individual packages'",
    "test:cli": "npm run test --workspace=packages/cli",
    "test:all": "npm run test --workspaces",
    "lint": "echo 'Linting will be implemented in individual packages'",
    "lint:all": "npm run lint --workspaces",
    "clean": "rm -rf dist node_modules packages/*/dist packages/*/node_modules",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@vitest/coverage-v8": "^1.6.0",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  }
}
