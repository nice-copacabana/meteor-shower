{
  "name": "meteor-shower-utils",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",

  // 构建和开发脚本
  "scripts": {
    "build": "tsc -p tsconfig.json",        // 编译TypeScript到JavaScript
    "dev": "ts-node src/index.ts",          // 开发模式直接运行TypeScript
    "test": "echo 'no-tests-yet'"          // 测试占位符
  },

  // 运行时依赖
  "dependencies": {
    "ajv": "^8.17.1",                       // JSON Schema验证器
    "chalk": "^5.3.0"                       // 终端颜色输出
  },

  // 开发时依赖
  "devDependencies": {
    "typescript": "^5.6.3",                 // TypeScript编译器
    "ts-node": "^10.9.2",                   // TypeScript运行时
    "@types/node": "^20.12.12"              // Node.js类型定义
  }
}
