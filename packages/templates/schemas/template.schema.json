{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TemplateMetadata",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "version": { "type": "string" },
    "targets": {
      "type": "array",
      "items": { "type": "string", "enum": ["gemini", "claude", "cursor", "openai"] }
    },
    "variables": { "type": "object", "additionalProperties": { "type": "string" } }
  },
  "required": ["id", "name", "version", "targets"]
}
